@model MVCAssignment.Models.Domain.Author
@{
    
}


<div class="container pt-5">
    <div class="row">

        <div class="col-md-6">
            <h3>Update Author</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id"/>

                <div class="form-group">
                    <label asp-for="AuthorName">Author Name *</label>
                    <input type="text" class="form-control" asp-for="AuthorName"/>
                    <span asp-validation-for="AuthorName" class="text-danger"></span>

                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group text-success">
                       @TempData["msg"]
                        <span asp-validation-for="AuthorName" class="text-success"></span>

                    </div>
                }
                <div class="form-group pt-2">
                    <button type="submit" class="btn btn-dark">Save </button>
                    <a href="/Author/GetAll" class="btn btn-primary">List</a>
                </div>
            </form>
        </div>
    </div>


</div>

